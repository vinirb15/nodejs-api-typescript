{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "tsconfig.json",
        "tsconfigRootDir": "./"
    },
    "rules": {
        "array-bracket-spacing": [
            "error", 
            "never"
        ],
        "linebreak-style": [
            "error"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "max-len": [
            "error", 
            { "code": 120 }
        ],
        "no-cond-assign": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-unused-vars": [
          "warn", // or error
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_",
            "caughtErrorsIgnorePattern": "^_",
            "vars": "all",
            "args": "after-used"
          }
        ],
        "padding-line-between-statements": [
            "error",
            { 
                "blankLine": "always", 
                "prev": "*", 
                "next": "function" 
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-misused-promises": "off",
        "@typescript-eslint/strict-boolean-expressions": "off"
    }
}